% Semester based timestamping
\RequirePackage{datenumber}

\newcommand{\week}[1]{%
    \setdatenumber{2022}{02}{14}% semester one, 2022 O-week
    \ifnum#1>8% Cater for mid-semester break
        \addtocounter{datenumber}{\the\numexpr(#1+2)*7}%
    \else \ifnum#1>1% Cater for week of cancelled classes
            \addtocounter{datenumber}{\the\numexpr(#1+1)*7}%
        \else
            \addtocounter{datenumber}{\the\numexpr#1*7}%
        \fi
    \fi
    \setdatebynumber{\thedatenumber}%
    \datedate
}

