        \addtocounter{datenumber}{\the\numexpr#2*7}%
    \fi
    \ifthenelse{\equal{#1}{practical}}%
    {\addtocounter{datenumber}{2}}%
    {}%
    \ifthenelse{\equal{#1}{tutorial}}%
    {\addtocounter{datenumber}{3}}%
    {}%
    \setdatebynumber{\thedatenumber}%
    \datedate
}

